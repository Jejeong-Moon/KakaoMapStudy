<script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=083a2bd9d2504e9dde582bbbb8ce730b"></script>
<script type="text/javascript">

	function initialize()
	{
		container = document.getElementById("map");
		mapCenter = new kakao.maps.LatLng(37.556570, 126.919533);
		options =
			{
				center: mapCenter
				,level:3
			};
		
		map = new kakao.maps.Map(container,options);
		
		//imgSrc = "http://t1.daumcdn.net/localimg/localimages/07/mapapidoc/marker_red.png";
		imgSrc = "imgs/qus.gif";
		//imgSrc = "https://tenor.com/ko/view/롤-미아핑-롤-gif-14113824675282291386";
		//-- 마커 이미지 경로
		imageSize = new kakao.maps.Size(54,59);
		// 마커 이미지 크기
		imageOption = {offset: new kakao.maps.Point(27,69)};
		marker = new kakao.maps.Marker(
		{
			position: mapCenter
			
		});
		
		// 구성한 마커 속성을 활용하여 마커 이지미 생성
		markerImage = new kakao.maps.MarkerImage(imgSrc,imageSize,imageOption);
		
		// 마커 생성
		marker = new kakao.maps.Marker({
			
			position : mapCenter
			, image : markerImage
		})
		
		marker.setMap(map);
	}

</script>
</head>
<body onload="initialize()">


