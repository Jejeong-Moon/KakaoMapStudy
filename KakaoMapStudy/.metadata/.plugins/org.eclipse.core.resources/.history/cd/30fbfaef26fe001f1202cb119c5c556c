<script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=083a2bd9d2504e9dde582bbbb8ce730b"></script>
<script type="text/javascript">

	function initialize()
	{
		container = document.getElementById("map");
		mapCenter = new kakao.maps.LatLng(37.556570, 126.919533);
		options =
			{
				center: mapCenter
				,level:3
			};
		
		map = new kakao.maps.Map(container,options);
		
		// 마커 옵션 구성 → 길 건너 스타벅스
		
		markerPostion = new kakao.maps.LatLng(37.55683402006926, 126.92001891193567);
							kakao.maps.LatLng
		
		// 마커 생성
		
		marker = new kakao.maps.Marker({
			
			position : markerPostion
			
		});
		
		// 생성된 마커가 지도에 표시될 수 있도록 표시
		
		marker.setMap(map);
		
	}

</script>
</head>
<body onload="initialize()">


<!-- 지도를 그려낼 div 공간 제작 -->
<!-- ○ 발급 받은 APP Key -->
<!-- 083a2bd9d2504e9dde582bbbb8ce730b -->

<!-- ○ 지도의 중심 좌표 -->
<!-- 37.556570, 126.919533 -->

<!-- ○ 2번 출구 앞 스타벅스 좌표 -->
<!-- 37.557291419251065, 126.9236372295092 -->

<!-- ○ 길 건너 스타벅스 좌표 -->
<!-- 37.55683402006926, 126.92001891193567 -->

