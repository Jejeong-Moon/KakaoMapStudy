<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Insert title here</title>
<link rel="stylesheet" type="text/css" href="css/main.css">
<script type="text/javascript" src="//dapi.kakao.com/v2/maps/sdk.js?appkey=083a2bd9d2504e9dde582bbbb8ce730b"></script>
<script type="text/javascript">

	function initialize()
	{
		container = document.getElementById("map");
		options =
		{
			center: new kakao.maps.LatLng(37.556570, 126.919533)
			, level: 3
		};
		
		map = new kakao.maps.Map(container,options);
		
		//check
		// 지도 내부에 표시할 마커 구성(생성)
		// marker = new kakao.maps.Marker({마터 구성 속성들});
		marker = new kakao.maps.Marker({
			// 지도 중심 좌표 (37.556570, 126.919533)에
			// 마커가 생성될 수 있도록 구성
			// → 『position』
			position: map.getCenter()
			
			
		});
		
		// 지도에 마커 표시를 포함 → 마커의 입장에서 지도를 지정
		marker.setMap(map);
		
	}
	
	function clickAction()
	{
		
		kakao.maps.event.addListener(map, "click", function(mouseEvent)
		{
			var latLng = mouseEvent.latLng;
			
			//check~!!
			// 기존 생성된 마커의 위치를 클릭한 지점으로 이동
			marker.setPosition(latLng);
			
		});
		
	}


</script>

</head>
<body onload="initialize()">

<!-- 지도를 그려낼 div 공간 제작 -->
<!-- ○ 발급 받은 APP Key -->
<!-- 083a2bd9d2504e9dde582bbbb8ce730b -->

<!-- ○ 지도의 중심 좌표 -->
<!-- 37.556570, 126.919533 -->

<div id="map" style="width: 100%; height: 400px;"></div>

</body>
</html>